<h1>LISTING IDEAS</h1>

    <% @ideas.each do |idea| %>
 <div class = "col-md-4 ">
  <div class="tile">
      <div class="idea_name">
        <h3><%= idea.name %><h3>

      </div>
       <div class="idea_desc shortDesc">

        <%= idea.description %>
      </div>
       <div class="idea_picture">
        <%= image_tag(idea.picture_url) if idea.picture.present? %>
      </div>
      <div class="idea_links">
        <p><%= link_to 'Show', idea %> | </p>
        <p><%= link_to 'Edit', edit_idea_path(idea) %> | </p>
        <p><%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' } %></p>
      </div>
    </div>
    </div>
    <% end %>

